{
  "manifest_version": 3,
  "name": "Chess.com Eval Bar Auto",
  "version": "1.0",
  "description": "Automatically show evaluation bar on Chess.com play pages.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://www.chess.com/play",
    "https://www.chess.com/play/computer"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/play",
        "https://www.chess.com/play/computer"
      ],
      "js": ["content.js"]
    }
  ]
}
